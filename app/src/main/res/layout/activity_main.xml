<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:id="@+id/activity_main">

    <TextView
        android:id="@+id/textView_main_id"
        android:layout_width="95dp"
        android:layout_height="32dp"
        android:layout_marginBottom="10dp"
        android:text="ID" />

    <EditText
        android:id="@+id/editText_main_id"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:layout_margin ="10dp"/>

    <TextView
        android:id="@+id/TextView_main_pw"
        android:layout_width="118dp"
        android:layout_height="28dp"
        android:layout_marginBottom="10dp"
        android:text="Password" />

    <EditText
        android:id="@+id/editText_main_pw"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:layout_margin ="10dp" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNIN" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="CliSignUp"
        android:text="SIGNUP"
        android:layout_margin ="10dp" />
    <CheckBox
        android:id="@+id/chk_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동 로그인" />

    <TextView
        android:id="@+id/textView_main_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--
    <FrameLayout
        android:id="@+id/advertiser_fragment_container"
